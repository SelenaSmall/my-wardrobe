<p id="notice"><%= notice %></p>


<div class="row">
  <div class="col-xs-8">
    <h3 id="items-title">Items</h3>
    <form class="form-inline my-2 my-lg0 item-search-form">
      <input class="form-control mr-sm-2" type="Search" aria-label="Search">
      <button class="btn btn-outline-success my-2 my-sm-0" type="Submit">Search</button>
    </form>
  </div>
  
  <div class="col-xs-4 new-link"> 
    <%= link_to 'New Item', new_item_path %>
  </div>
</div>

<br>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Tags</th>
      <th>Actions</th>      
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= image_tag(item.image) %></td>
        <td><%= item.name %></td>
        <td><%= item.tags.index.map {|t| t.name } %></td>
        <td>
          <%= link_to 'Edit', edit_item_path(item) %> |
          <%= link_to 'Delete', item, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
