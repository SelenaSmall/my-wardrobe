<%= form_with(model: item, local: true) do |f| %>
  <% if item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.text_field :name, placeholder: 'item' %>
  </div>

  <div class="field">
    <% Tag.all.each do |t| %>
    
    <label>
      <%= check_box_tag('item[tag_ids][]', t.id, item.tags.include?(t)) %>
      <%= t.name %>  
    </label>

    <% end %>
  </div>

  <div class="field">
    <label>Category</label>
    <%= f.collection_select :category_id, Category.order(:name), :id, :name, include_blank: true %>
  </div>

  <div class="field">
    <label>
      <%= f.file_field :image, alt: item.image_identifier %>
    </label>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
