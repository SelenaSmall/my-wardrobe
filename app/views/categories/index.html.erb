<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-xs-8">
    <h3 id="categories-title">Categories</h3>
  </div>

  <div class="col-xs-4 new-link">
    <%= link_to 'New Category', new_category_path %>
  </div>
</div>

<% @categories.each do |category| %>
  <div class="col-md-4 col-md-offset-4" style="border: 1px solid #000; border-radius: 5px; padding: 20px; margin-bottom: 10px; text-align: center">
    <h3>
      <%= link_to "#{category.name}", category_path(category) %>

      <%= link_to edit_category_path(category), class: "btn btn-default" do %>
        <i class="glyphicon glyphicon-pencil"></i>
      <% end %>
      <%= link_to category, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default" do %>
        <i class="glyphicon glyphicon-trash"></i>
      <% end %>
    </h3>
  </div>
<% end %>
